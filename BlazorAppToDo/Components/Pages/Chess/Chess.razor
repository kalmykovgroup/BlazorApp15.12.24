@page "/chess" 
@using BlazorAppToDo.Interfaces
@rendermode InteractiveServer
@inherits ChessBase
<PageTitle>Chess</PageTitle>

<h1>Chess</h1>
  

<div class="board">
    <table style="border-collapse: collapse;">
        @for (int row = 0; row < ChessBoard.board2D.GetLength(0); row++)
        {
            <tr>
                @for (int col = 0; col < ChessBoard.board2D.GetLength(1); col++)
                {
                    <td style="width: 50px; height: 50px; text-align: center;
                           border: 1px solid black;
                           background-color: @((row + col)%2 != 0 ? "gray" : "white")">

                        @(ChessBoard.board2D[row, col].ChessPiece != null ? ChessBoard.board2D[row, col]?.ChessPiece?.Name : "")
                    </td>
                }
            </tr>
        }
    </table>
</div>   